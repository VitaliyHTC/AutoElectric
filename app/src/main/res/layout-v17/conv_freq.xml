<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/calcbase"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:fillViewport="true"
        android:layout_weight="1.0">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16.0sp"
                android:id="@+id/freq_textDescr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:text="@string/freq_descr" />
            <Button
                android:theme="@style/mybutton"
                android:id="@+id/freq_btnFreq"
                android:layout_width="200.0dip"
                android:layout_height="wrap_content"
                android:text="@string/frequ"
                android:layout_below="@+id/freq_textDescr"
                android:layout_centerHorizontal="true" />
            <Button
                android:theme="@style/mybutton"
                android:id="@+id/freq_btnPer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:text="@string/period"
                android:layout_below="@+id/freq_btnFreq"
                android:layout_alignLeft="@+id/freq_btnFreq"
                android:layout_alignRight="@+id/freq_btnFreq"
                android:layout_alignStart="@+id/freq_btnFreq"
                android:layout_alignEnd="@+id/freq_btnFreq" />
            <TextView
                android:textSize="16.0sp"
                android:id="@+id/freq_textWaveLeng"
                android:padding="5.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:text="@string/freq_wave_descr"
                android:layout_below="@+id/freq_btnPer" />
            <Button
                android:theme="@style/mybutton"
                android:id="@+id/freq_btnWvel"
                android:layout_width="160.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:text="@string/freq_wave_vel"
                android:layout_below="@+id/freq_textWaveLeng"
                android:layout_marginStart="5.0dip" />
            <Button
                android:theme="@style/mybutton"
                android:id="@+id/freq_btnWlen"
                android:layout_width="200.0dip"
                android:layout_height="wrap_content"
                android:text="@string/wavelength"
                android:layout_below="@+id/freq_btnWvel"
                android:layout_centerHorizontal="true" />
            <TextView
                android:textSize="16.0sp"
                android:gravity="center_horizontal"
                android:id="@+id/freq_lambda_fractions"
                android:padding="5.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_below="@+id/freq_btnWlen" />
            <Spinner
                android:gravity="center_vertical"
                android:id="@+id/freq_spin_Wvel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_toRightOf="@+id/freq_btnWvel"
                android:layout_alignTop="@+id/freq_btnWvel"
                android:layout_alignBottom="@+id/freq_btnWvel"
                android:layout_toEndOf="@+id/freq_btnWvel" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>